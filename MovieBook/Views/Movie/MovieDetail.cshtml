        <span>Kapat</span>
        <iframe width="560" height="315" class="fragmanyoutube" src="@Model.MovieFragman" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
}
