                    <span class="icerikaltbaslik altbaslikyanyanaduzen"><i class="fa-solid fa-eye"></i>1000</span>
                    @foreach (var item in Model.Categories)
                    {
                        <a asp-controller="Category" asp-action="GetAll" asp-route-id="@item.Category.Id"><span class="icerikaltbaslik altbaslikyanyanaduzen">@item.Category.CategoryName</span></a>
